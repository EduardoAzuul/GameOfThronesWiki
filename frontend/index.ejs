<!DOCTYPE html>
<html lang="es" data-bs-theme="dark">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Enciclopedia de Hielo y Fuego</title>
    
    <!-- Bootstrap 5.3 CSS -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">
    
    <!-- Google Fonts -->
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Cinzel:wght@400;700&family=Lato:wght@300;400;700&display=swap" rel="stylesheet">
</head>

<body>
    <div class="container my-5">
        <header class="text-center mb-5">
            <h1 class="display-4 titulo-enciclopedia">Enciclopedia de Hielo y Fuego</h1>
            <p class="text-muted">Total characters: <%= totalCharacters %></p>
        </header>

        <!-- Search Form -->
        <form id="search-form" class="search-form mb-5">
            <div class="input-group">
                <input type="text" name="characterName" class="form-control form-control-lg search-input" placeholder="Search for a character name..." required>
                <button type="submit" class="btn btn-buscar">Valar Morghulis</button>
            </div>
        </form>

        <!-- Error Message -->
        <% if (error) { %>
            <div class="alert alert-danger">
                <%= error %>
            </div>
        <% } %>

        <!-- Characters Table -->
        <% if (characters && characters.length > 0) { %>
            <div class="card mb-4">
                <div class="card-header">
                    <h3 class="mb-0">Character List</h3>
                </div>
                <div class="card-body p-0">
                    <div class="table-responsive">
                        <table class="table table-dark table-hover mb-0">
                            <thead>
                                <tr>
                                    <th scope="col">Image</th>
                                    <th scope="col">Full Name</th>
                                    <th scope="col">Title</th>
                                    <th scope="col">Family</th>
                                    <th scope="col" class="text-center">Actions</th>
                                </tr>
                            </thead>
                            <tbody>
                                <% characters.forEach(character => { %>
                                    <tr>
                                        <td>
                                            <% if (character.image) { %>
                                                <img src="<%= character.image %>" 
                                                     alt="<%= character.fullName %>" 
                                                     class="rounded">
                                            <% } else { %>
                                                <div class="bg-secondary rounded d-flex align-items-center justify-content-center">
                                                    ?
                                                </div>
                                            <% } %>
                                        </td>
                                        <td class="align-middle">
                                            <strong><%= character.fullName %></strong>
                                        </td>
                                        <td class="align-middle">
                                            <%= character.titles || 'No title' %>
                                        </td>
                                        <td class="align-middle">
                                            <%= character.family %>
                                        </td>
                                        <td class="align-middle text-center">
                                            <a href="/character/<%= character.id %>" 
                                               class="btn btn-sm btn-outline-light">
                                               View Details
                                            </a>
                                        </td>
                                    </tr>
                                <% }); %>
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>

            <!-- Pagination -->
            <nav aria-label="Character navigation">
                <ul class="pagination justify-content-center">
                    <li class="page-item <%= currentPage === 1 ? 'disabled' : '' %>">
                        <a class="page-link" href="/?page=<%= currentPage - 1 %>">Previous</a>
                    </li>
                    
                    <% 
                        const startPage = Math.max(1, currentPage - 2);
                        const endPage = Math.min(totalPages, currentPage + 2);
                        
                        for (let i = startPage; i <= endPage; i++) { 
                    %>
                        <li class="page-item <%= i === currentPage ? 'active' : '' %>">
                            <a class="page-link" href="/?page=<%= i %>"><%= i %></a>
                        </li>
                    <% } %>
                    
                    <li class="page-item <%= currentPage === totalPages ? 'disabled' : '' %>">
                        <a class="page-link" href="/?page=<%= currentPage + 1 %>">Next</a>
                    </li>
                </ul>
            </nav>
        <% } else { %>
            <div class="text-center welcome-message">
                <h2 class="display-6 text-muted">The night is dark and full of terrors...</h2>
                <p class="lead">Loading characters...</p>
            </div>
        <% } %>
    </div>

    <!-- Custom Script -->
    <script src="/func.js"></script>
</body>
</html>
