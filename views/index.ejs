<!DOCTYPE html>
<html lang="es" data-bs-theme="dark">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Enciclopedia: <%= character ? character.fullName : 'Explorar Personajes' %></title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Cinzel:wght@400;700&family=Lato:wght@300;400;700&display=swap" rel="stylesheet">
    <link rel="stylesheet" href="/css/style.css">
</head>
<body>
    <div class="container my-5">
        <header class="text-center mb-4">
            <h1 class="display-4 titulo-enciclopedia">The Ultimate GoT Encyclopedia</h1>
            <p class="lead text-muted">Explore the characters from the world of Game of Thrones</p>
        </header>

        <!-- Formulario de Búsqueda -->
        <form id="search-form" class="search-form mb-5">
            <div class="input-group">
                <input type="text" name="characterName" class="form-control form-control-lg search-input" placeholder="Busca por el nombre de un personaje..." required>
                <button type="submit" class="btn btn-buscar">SEARCH</button>
            </div>
        </form>

        <!-- Lógica condicional para mostrar el contenido -->
        <% if (character) { %>
            <!-- MUESTRA UN SOLO PERSONAJE (VISTA DE DETALLE) -->
            <div class="character-card p-0 mb-4">
                <div class="row g-0">
                    <div class="col-md-4">
                        <img src="<%= character.image || 'https://placehold.co/600x900/1c1c1c/D4AF37?text=?' %>" alt="Imagen de <%= character.fullName %>" class="character-image">
                    </div>
                    <div class="col-md-8 d-flex flex-column">
                        <div class="card-body p-4">
                            <h1 class="display-5 mb-0 character-name"><%= character.fullName %></h1>
                            <p class="mb-4 character-title"><%= character.titles %></p>
                            <div class="details mb-4">
                                <p><strong>Familia:</strong> <%= character.family %></p>
                                <p><strong>Nacimiento:</strong> <%= character.born %></p>
                                <p><strong>Muerte:</strong> <%= character.died %></p>
                                <p><strong>Alias:</strong> <%= character.aliases %></p>
                            </div>
                            <div class="text-center mt-auto">
                                <span class="counter"><%= character.id %> de <%= totalCharacters %></span>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            <div class="navigation" data-character-id="<%= character.id %>">
                <div class="d-flex justify-content-between">
                    <button id="prev-btn" class="nav-btn rounded-pill">PREVIOUS</button>
                    <button id="next-btn" class="nav-btn rounded-pill">NEXT</button>
                </div>
                <div class="text-center mt-4">
                    <a href="/" class="btn btn-outline-light rounded-pill">Volver a la Galería</a>
                </div>
            </div>

        <% } else if (allCharacters && allCharacters.length > 0) { %>
            <!-- MUESTRA LA GALERÍA DE PERSONAJES (PRINCIPAL O DE BÚSQUEDA) -->

            <% if (error) { %>
                <%# Determinamos el color del mensaje: 'info' para búsqueda exitosa, 'warning' para no encontrado %>
                <% const alertClass = error.includes('encontraron') ? 'alert-info' : 'alert-warning'; %>
        
                <div class="alert <%= alertClass %> d-flex justify-content-between align-items-center mb-4" role="alert">
                    <span><%= error %></span>
                    
                    <%# Mostramos el botón de regreso si es un resultado de búsqueda (exitoso o no) %>
                    <a href="/" class="btn btn-dark btn-sm">
                        Return to Gallery
                    </a>
                </div>
            <% } %>

            <div class="row row-cols-1 row-cols-sm-2 row-cols-md-3 row-cols-lg-4 g-4">
                <% allCharacters.forEach(char => { %>
                    <div class="col">
                        <a href="/character/<%= char.id %>" class="text-decoration-none">
                            <div class="card character-gallery-card h-100">
                                <img src="<%= char.image || 'https://placehold.co/400x250/1c1c1c/D4AF37?text=?' %>" class="card-img-top gallery-img" alt="Imagen de <%= char.fullName %>">
                                <div class="card-body text-center">
                                    <h5 class="card-title gallery-title"><%= char.fullName %></h5>
                                </div>
                            </div>
                        </a>
                    </div>
                <% }); %>
            </div>

        <% } else { %>
            <!-- MUESTRA MENSAJE DE ERROR O UN INDICADOR DE CARGA -->
            <div class="text-center py-5">
                <% if (error) { %>
                    <div class="alert alert-danger welcome-message"><h2 class="display-6"><%= error %></h2></div>
                <% } else { %>
                    <div class="spinner-border text-light" style="width: 3rem; height: 3rem;" role="status">
                        <span class="visually-hidden">Loading characters...</span>
                    </div>
                <% } %>
            </div>
        <% } %>
    </div>

    <script src="/js/main.js"></script>
</body>
</html>

