<%- include('partials/header') %>

<!DOCTYPE html>
<html lang="en" data-bs-theme="dark">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Encyclopedia: <%= character ? character.fullName : 'Explore Characters' %></title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Cinzel:wght@400;700&family=Lato:wght@300;400;700&display=swap" rel="stylesheet">
    <link rel="stylesheet" href="/css/style.css">
</head>

<body>
    <div class="container my-5">
        <header class="text-center mb-4">
            <h1 class="display-4 titulo-enciclopedia">The Ultimate GoT Encyclopedia</h1>
            <p class="lead text-muted">Explore the characters from the world of Game of Thrones</p>
        </header>

        <!-- Search Form -->
        <form action="/search" method="GET" class="search-form mb-5">
            <div class="input-group">
                <input type="text" name="name" class="form-control form-control-lg search-input" placeholder="Search by character name..." required>
                <button type="submit" class="btn btn-buscar">SEARCH</button>
            </div>
        </form>

        <!-- Conditional logic to display content -->
        <% if (character) { %>
            <!-- DISPLAY A SINGLE CHARACTER (DETAIL VIEW) -->
            <div class="character-card p-0 mb-4">
                <div class="row g-0">
                    <div class="col-md-4 text-center p-4">
                        <img src="<%= character.image || 'https://placehold.co/600x900/1c1c1c/D4AF37?text=?' %>" alt="Image of <%= character.fullName %>" class="character-image rounded">
                        
                    </div>
                    
                    <div class="col-md-8 d-flex flex-column">
                        <div class="card-body p-4">
                            <!-- Character Name -->
                            <h1 class="display-5 mb-0 character-name"><%= character.fullName %></h1>

                            <!-- Basic Information -->
                            <div class="info-section">
                                <ul class="info-list">
                                    <li><strong>First name:</strong> <%= character.firstName %></li>
                                    <li><strong>Last name:</strong> <%= character.lastName %></li>
                                    <li><strong>ID:</strong> <%= character.id %></li>
                                    <li><strong>Family:</strong> <%= character.family %></li>
                                    <li><strong>Born:</strong> <%= character.born %></li>
                                    <li><strong>Died:</strong> <%= character.died %></li>
                                    <% if (character.culture && character.culture !== 'Unknown') { %>
                                        <li><strong>Culture:</strong> <%= character.culture %></li>
                                    <% } %>
                                </ul>
                            </div>

                            <!-- Titles -->
                            <% if (character.titles && character.titles.length > 0) { %>
                                <div class="info-section">
                                    <h5><i class="bi bi-crown"></i> Titles</h5>
                                    <div class="badge-list">
                                        <% character.titles.forEach(title => { %>
                                            <span class="badge badge-custom"><%= title %></span>
                                        <% }); %>
                                    </div>
                                </div>
                            <% } %>

                            <!-- Aliases -->
                            <% if (character.aliases && character.aliases.length > 0) { %>
                                <div class="info-section">
                                    <h5><i class="bi bi-mask"></i> Aliases</h5>
                                    <div class="badge-list">
                                        <% character.aliases.forEach(alias => { %>
                                            <span class="badge badge-alias"><%= alias %></span>
                                        <% }); %>
                                    </div>
                                </div>
                            <% } %>

                            <!-- Actor Information (Ice & Fire API) -->
                            <% if (character.playedBy && character.playedBy.length > 0 && character.playedBy[0] !== '') { %>
                                <div class="info-section">
                                    <h5><i class="bi bi-film"></i> Played By</h5>
                                    <p class="mb-0"><%= character.playedBy.join(', ') %></p>
                                </div>
                            <% } %>

                            <!-- TV Series Appearances (Ice & Fire API) -->
                            <% if (character.tvSeries && character.tvSeries.length > 0 && character.tvSeries[0] !== '') { %>
                                <div class="info-section">
                                    <h5><i class="bi bi-tv"></i> TV Series Appearances</h5>
                                    <div class="badge-list">
                                        <% character.tvSeries.forEach(season => { %>
                                            <span class="badge bg-secondary"><%= season %></span>
                                        <% }); %>
                                    </div>
                                </div>
                            <% } %>

                            <div class="text-center mt-4">
                                <span class="counter"><%= character.id %> of <%= totalCharacters %></span>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            
            <!-- Navigation -->
            <div class="navigation" data-character-id="<%= character.id %>">
                <div class="d-flex justify-content-between">
                    <button id="prev-btn" class="nav-btn rounded-pill">← PREVIOUS</button>
                    <button id="next-btn" class="nav-btn rounded-pill">NEXT →</button>
                </div>
                <div class="text-center mt-4">
                    <a href="/" class="btn btn-outline-light rounded-pill">Return to Gallery</a>
                </div>
            </div>

        <% } else if (allCharacters && allCharacters.length > 0) { %>
            <!-- DISPLAY CHARACTER GALLERY (MAIN OR SEARCH) -->

            <% if (error) { %>
                <% const alertClass = error.includes('Found') ? 'alert-info' : 'alert-warning'; %>
        
                <div class="alert <%= alertClass %> d-flex justify-content-between align-items-center mb-4" role="alert">
                    <span><%= error %></span>
                    <a href="/" class="btn btn-dark btn-sm">Return to Gallery</a>
                </div>
            <% } %>

            <div class="row row-cols-1 row-cols-sm-2 row-cols-md-3 row-cols-lg-4 g-4">
                <% allCharacters.forEach(char => { %>
                    <div class="col">
                        <a href="/character/<%= char.id %>" class="text-decoration-none">
                            <div class="card character-gallery-card h-100">
                                <img src="<%= char.image || 'https://placehold.co/400x250/1c1c1c/D4AF37?text=?' %>" class="card-img-top gallery-img" alt="Image of <%= char.fullName %>">
                                <div class="card-body">
                                    <h5 class="card-title gallery-title text-center"><%= char.fullName %></h5>
                                    <p class="text-muted text-center small mb-2">
                                        <i class="bi bi-house-door"></i> <%= char.family %>
                                    </p>
                                    <% if (char.titles && char.titles.length > 0) { %>
                                        <p class="text-warning text-center small mb-0">
                                            <i class="bi bi-award"></i> <%= char.titles[0] %>
                                        </p>
                                    <% } %>
                                </div>
                            </div>
                        </a>
                    </div>
                <% }); %>
            </div>

        <% } else { %>
            <!-- DISPLAY ERROR MESSAGE OR LOADING INDICATOR -->
            <div class="text-center py-5">
                <% if (error) { %>
                    <div class="alert alert-danger">
                        <h2 class="display-6"><%= error %></h2>
                    </div>
                <% } else { %>
                    <div class="spinner-border text-light" style="width: 3rem; height: 3rem;" role="status">
                        <span class="visually-hidden">Loading characters...</span>
                    </div>
                <% } %>
            </div>
        <% } %>
    </div>

    <script>
        // Navigation functionality
        const prevBtn = document.getElementById('prev-btn');
        const nextBtn = document.getElementById('next-btn');
        const navigationDiv = document.querySelector('.navigation');

        if (prevBtn && nextBtn && navigationDiv) {
            const currentId = navigationDiv.dataset.characterId;

            prevBtn.addEventListener('click', async () => {
                await navigateCharacter('prev', currentId);
            });

            nextBtn.addEventListener('click', async () => {
                await navigateCharacter('next', currentId);
            });

            async function navigateCharacter(direction, currentId) {
                try {
                    const response = await fetch(`/api/character/navigate/${direction}/${currentId}`);
                    const result = await response.json();
                    
                    if (result.success) {
                        window.location.href = `/character/${result.data.id}`;
                    }
                } catch (error) {
                    console.error('Navigation error:', error);
                }
            }
        }
    </script>
</body>
</html>

<%- include('partials/footer') %>